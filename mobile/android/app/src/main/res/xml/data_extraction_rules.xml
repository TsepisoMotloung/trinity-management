<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+ (API 31+).
    Controls what data can be transferred during device-to-device migration
    and what is included in cloud backup.
    See: https://developer.android.com/about/versions/12/backup-restore
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive/credential data from cloud backup -->
        <exclude domain="sharedpref" path="FlutterSecureStorage"/>
        <exclude domain="sharedpref" path="flutter_secure_storage_shared_preferences"/>
        <exclude domain="file" path="flutter_secure_storage"/>
        <exclude domain="database" path="*.db-journal"/>
    </cloud-backup>
    <device-transfer>
        <!-- Allow general app data transfer between devices -->
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <!-- But still exclude credentials -->
        <exclude domain="sharedpref" path="FlutterSecureStorage"/>
        <exclude domain="sharedpref" path="flutter_secure_storage_shared_preferences"/>
        <exclude domain="file" path="flutter_secure_storage"/>
    </device-transfer>
</data-extraction-rules>
