<?xml version="1.0" encoding="utf-8"?>
<!--
    Android Auto Backup rules for Trinity Sound app.
    Excludes sensitive data (tokens, credentials) from cloud backup.
    See: https://developer.android.com/guide/topics/data/autobackup
-->
<full-backup-content>
    <!-- Exclude sensitive shared preferences -->
    <exclude domain="sharedpref" path="FlutterSecureStorage"/>
    <exclude domain="sharedpref" path="flutter_secure_storage_shared_preferences"/>

    <!-- Exclude cached data -->
    <exclude domain="database" path="*.db-journal"/>
    <exclude domain="external" path="*.tmp"/>

    <!-- Exclude any token/session files -->
    <exclude domain="file" path="flutter_secure_storage"/>
</full-backup-content>
